<h1><u>Voici la team :</u></h1>
<div class="container xaxa ">
  <% @users.each do |user| %>
    <div class="text-wrap border border-2 rounded-3 border-primary m-3 p-3 col-3">
      <h2 class="text-center  pb-2 border-bottom border-dark">
        <a href="<%= student_path(user) %>"><%= user.last_name %><br>
        <%= user.first_name %></a>
      </h2>
      <p><%= user.description %></p>
    </div>
  <% end %>
</div>




<p id="notice"><%= notice %></p>

<h1>Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>City</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utilisateurs.each do |utilisateur| %>
      <tr>
        <td><%= utilisateur.Age %></td>
        <td><%= utilisateur.City %></td>
        <td><%= utilisateur.Name %></td>
        <td><%= link_to 'Show', utilisateur %></td>
        <td><%= link_to 'Edit', edit_utilisateur_path(utilisateur) %></td>
        <td><%= link_to 'Destroy', utilisateur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

